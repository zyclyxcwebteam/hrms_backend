{
  "kind": "collectionType",
  "collectionName": "employee_profiles",
  "info": {
    "name": "Employee Profile"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Employee_Name": {
      "type": "string"
    },
    "Designation": {
      "type": "string"
    },
    "Employee_ID": {
      "type": "string"
    },
    "Gender": {
      "type": "enumeration",
      "enum": [
        "Male",
        "Female"
      ]
    },
    "Work_Email": {
      "type": "email"
    },
    "Mobile": {
      "type": "string"
    },
    "Department": {
      "type": "enumeration",
      "enum": [
        "IT",
        "HR",
        "Sales",
        "Business_Development"
      ]
    },
    "Marital_Status": {
      "type": "enumeration",
      "enum": [
        "Single",
        "Married"
      ]
    },
    "Blood_Group": {
      "type": "enumeration",
      "enum": [
        "A_Positive",
        "A_Negative",
        "B_Positive",
        "B_Negative",
        "AB_Positive",
        "AB_Negative",
        "O_Positive",
        "O_Negative",
        "A2B_Positive",
        "A2B_Negative"
      ]
    },
    "Work_Phone": {
      "type": "string"
    },
    "Home_Phone": {
      "type": "string"
    },
    "Other_Email": {
      "type": "email"
    },
    "Permanent_Address": {
      "type": "text"
    },
    "Present_Address": {
      "type": "text"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "employee_profile"
    },
    "Hire_Date": {
      "type": "string"
    },
    "DOB": {
      "type": "string"
    }
  }
}
